<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/khamfa_primary">
    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/khamfa_primary"
        android:divider="@color/cardview_light_background" />
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_playing"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|right|center_vertical|center_horizontal|center"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:text="1"
        android:textAlignment="center"
        android:textColor="@color/khamfa_secondary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="@color/khamfa_primary"
        app:elevation="5dp"
        app:fabCustomSize="50dp" />
</FrameLayout>
